{
  "name": "servaan",
  "version": "0.1.0",
  "description": "سِروان - سیستم مدیریت داخلی کافه و رستوران",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "start": "cd src/backend && npm run start",
    "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && npm test",
    "prisma:generate": "cd src/prisma && npx prisma generate",
    "prisma:migrate": "cd src/prisma && npx prisma migrate dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "inventory",
    "management",
    "cafe",
    "restaurant",
    "farsi"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "jspdf": "^3.0.1",
    "prisma": "^6.13.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "xlsx": "^0.18.5"
  }
}
